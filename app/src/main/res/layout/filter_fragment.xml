<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <View

        android:id="@+id/invisibleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:clickable="true"
        android:visibility="invisible" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Специальность:"
            android:textColor="@color/bpBlue"
            android:textSize="17dp" />

        <!--<Spinner-->
        <!--android:id="@+id/spinnerSpeciality"-->
        <!--style="@style/Widget.AppCompat.Spinner.Underlined"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:backgroundTint="@color/colorGray" />-->

        <AutoCompleteTextView
            android:id="@+id/myAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGray"
            android:hint="Специальность"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGray" />

        <TextView
            android:id="@+id/nameClinicDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Имя:"
            android:textColor="@color/bpBlue"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/titleClinicET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGray"
            android:hint="Введите имя специалиста"
            android:padding="20dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Город:"
            android:textColor="@color/bpBlue"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/spinnerCity"
            style="@style/Widget.AppCompat.Spinner.Underlined"

            android:layout_width="match_parent"
            android:layout_height="61dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorGray"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bpBlue"
            android:gravity="center"
            android:text="ПОИСК" />


    </LinearLayout>

</FrameLayout>


